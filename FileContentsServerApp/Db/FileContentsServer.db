record(waveform, "$(P)LINES_ARRAY:SP") 
{
    field(DTYP, "asynOctetWrite") 
    field(INP,  "@asyn($(PORT),0,0)LINES_ARRAY") 
    field(FTVL, "CHAR")
    field(NELM, "5000")
    info(asyn:READBACK, "1")
    }


record(stringin, "$(P)FILE_NAME") 
{
    field(DTYP, "asynOctetRead") 
    field(INP,  "@asyn($(PORT),0,0)FILE_NAME") 
    field(SCAN, "I/O Intr")
}

record(stringout, "$(P)FILE_NAME:SP")
{
    field(DTYP, "asynOctetWrite") 
    field(OUT,  "@asyn($(PORT),0,0)FILE_NAME") 
    info(autosaveFields, "VAL")
    field(PINI, "YES")
}

record(bo, "$(P)SAVE_FILE")
{
    field(DESC, "Trigger save file")
    field(DTYP, "asynInt32")                   
    field(OUT,  "@asyn($(PORT),0,0)SAVE_FILE")   
    field(VAL, "0")                           
    field(RVAL, "0")
    field(ZNAM, "Idle")                    
    field(ONAM, "Saving file")   
    field(ASG, "MANAGER")  
}

